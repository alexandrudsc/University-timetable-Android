<?xml version="1.0" encoding="utf-8"?>
<!-- Values for API v >= 11 -->
<resources>

    <style name="ActionBar.Solid.Alexandru" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="background">@drawable/ab_solid_alexandru</item>
        <item name="backgroundStacked">@drawable/ab_stacked_solid_alexandru</item>
        <item name="backgroundSplit">@drawable/ab_bottom_solid_alexandru</item>
        <item name="progressBarStyle">@style/ProgressBar.Alexandru</item>
        <item name="displayOptions">useLogo|showHome</item>
        <item name="android:displayOptions">useLogo|showHome</item>
    </style>

    <style name="FullscreenTheme" parent="android:Theme.Holo">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="android:Widget.Holo.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

</resources>