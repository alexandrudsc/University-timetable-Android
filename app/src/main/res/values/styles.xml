<?xml version="1.0" encoding="utf-8"?><!-- Values for API v < 11 -->
<resources>

    <style name="Theme.Alexandru" parent="@style/Theme.AppCompat.DayNight.DarkActionBar">
        <item name="displayOptions">useLogo|homeAsUp</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ActionBar.Solid.Alexandru" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="background">@drawable/ab_solid_alexandru</item>
        <item name="backgroundStacked">@drawable/ab_stacked_solid_alexandru</item>
        <item name="backgroundSplit">@drawable/ab_bottom_solid_alexandru</item>
        <item name="progressBarStyle">@style/ProgressBar.Alexandru</item>
    </style>

    <style name="ActionBar.Transparent.Alexandru" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="background">@drawable/ab_transparent_alexandru</item>
        <item name="progressBarStyle">@style/ProgressBar.Alexandru</item>
    </style>

    <style name="PopupMenu.Alexandru" parent="@style/Widget.AppCompat.Light.PopupMenu">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_alexandru</item>
    </style>

    <style name="DropDownListView.Alexandru" parent="@style/Widget.AppCompat.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_alexandru</item>
    </style>

    <style name="ActionBarTabStyle.Alexandru" parent="@style/Widget.AppCompat.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_alexandru</item>
    </style>

    <style name="DropDownNav.Alexandru" parent="@style/Widget.AppCompat.Light.Spinner.DropDown.ActionBar">
        <item name="android:background">@drawable/spinner_background_ab_alexandru</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_alexandru</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_alexandru</item>
    </style>

    <style name="ProgressBar.Alexandru" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_alexandru</item>
    </style>

    <style name="ActionButton.CloseMode.Alexandru" parent="@style/Widget.AppCompat.Light.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_alexandru</item>
    </style>

    <style name="ActionBarTitleText.Alexandru" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textAppearance">@style/ActionBarTitleTextStyle</item>
    </style>
    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Alexandru.Widget" parent="@style/Theme.AppCompat">
        <item name="popupMenuStyle">@style/PopupMenu.Alexandru</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Alexandru</item>
    </style>

    <style name="NoTitleText">
        <item name="android:textSize">0sp</item>
        <item name="android:textColor">#00000000</item>
    </style>

    <style name="ActionBarTitleTextStyle">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">0sp</item>
    </style>

    <style name="FullscreenTheme" parent="android:Theme.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">@style/ButtonBar</item>
        <item name="metaButtonBarButtonStyle">@style/ButtonBarButton</item>
    </style>

    <style name="ButtonBar">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@android:drawable/bottom_bar</item>
    </style>

    <style name="ButtonBarButton" />

</resources>