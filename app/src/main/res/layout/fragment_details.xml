<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:layout_margin="@dimen/widget_margin_right"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/course_prof"
        android:textSize="@dimen/large_text"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/course_time"
        android:textSize="@dimen/large_text"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/course_prof" />

    <TextView
        android:id="@+id/course_location"
        android:textSize="@dimen/large_text"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/course_time" />


    <Button
        android:id="@+id/course_button"
        android:text="@string/start_results_fragment"
        android:gravity="center"
        android:textColor="@color/app_color"
        android:layout_below="@id/course_location"
        android:textSize="@dimen/medium_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>