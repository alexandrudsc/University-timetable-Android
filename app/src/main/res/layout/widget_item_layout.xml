<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_list_item"
    android:background="@drawable/widget_item_backgroud"
    android:layout_width="fill_parent"
    android:orientation="horizontal"
    android:layout_height="fill_parent">

    <ImageView
        android:id="@+id/event_color_widget"
        android:background="@android:color/black"
        android:clickable="false"
        android:layout_margin="@dimen/widget_margin_left"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_width="@dimen/widget_item_image"
        android:layout_height="@dimen/widget_item_image" />

    <LinearLayout
        android:layout_margin="@dimen/widget_margin_left"
        android:background="@android:color/transparent"
        android:clickable="false"
        android:layout_height="match_parent"
        android:layout_width="0dip"
        android:layout_toRightOf="@id/event_color_widget"
        android:layout_alignParentRight="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/event_name_widget"
            android:background="@android:color/transparent"
            android:clickable="false"
            android:singleLine="true"
            android:ellipsize="end"
            android:textStyle="bold"
            android:textSize="@dimen/widget_item_text1"
            android:textColor="@android:color/black"
            android:layout_gravity="clip_vertical"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="0dip" />

        <TextView
            android:id="@+id/event_description_widget"
            android:ellipsize="end"
            android:clickable="false"
            android:textColor="@android:color/black"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/widget_item_text2"
            android:background="@android:color/transparent"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dip" />
    </LinearLayout>

</RelativeLayout>